Package: mrs
Type: Package
Title: Multilocus Risk Scoring Based on MB-MDR and Pairwise Epistatic Interactions
Version: 0.0.1
Authors@R:
    c(
      person("Wei-Ru", "Chen", email = "m88020362@email.com", role = c("aut", "cre")),
